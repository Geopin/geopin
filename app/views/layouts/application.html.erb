<!DOCTYPE html>
<html>
  <head>
    <title>Geopin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="topbar-wrapper">
        <div class="topbar-container">
          <div class="logo-wrapper">
            <div class="logo">
              <%= image_tag("logo.svg", :alt => "Geopin logo") %>
            </div>
            <div class="logo-name">
              Geopin
            </div>
          </div>
          <nav>
            <ul class="nav-wrapper">
              <li class="nav-item"><%= link_to "HOME", root_path, :class => "nav-item__link" %></li>
              <li class="nav-item"><%= link_to "SIGN IN", login_path, :class => "nav-item__link" %></li>
              <li class="nav-item"><%= link_to "SIGN UP", new_user_path, :class => "nav-item__link-signup" %></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
